<!--colright-->
<div class="col-md-4 col-sm-12">
    <!--tab popular-->
    <ul role="tablist" class="tab-popular">
        <li class="active">
            <a href="#tab1" role="tab" data-toggle="tab">
                DERNI&Egrave;RE PUBLICATIONS
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tab1">
            <ul class="list-news-popular">
                {% for article in articles %}
                    <li>
                        <a href="{{ path('front_article', {
                            'slug': article.slug,
                            'id': article.id,
                            'categorie': article.categorie.slug
                        }) }}">
                            <img alt="{{ article.titre }}" src="{{ asset('images/product/' ~ article.featuredImage) }}">
                        </a>
                        <h3><a href="{{ path('front_article', {
                                'slug': article.slug,
                                'id': article.id,
                                'categorie': article.categorie.slug
                            }) }}">{{ article.titre }}</a></h3>
                        <div class="meta-post">
                            <a href="{{ path('front_membre', {
                                'id': article.membre.id
                            }) }}">
                                {{ article.membre.prenom ~ ' ' ~ article.membre.nom }}
                            </a>
                            <em></em>
                            <span>
                                {{ article.dateCreation | date('d/m/Y') }}
                            </span>
                        </div>
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>

    <!-- subcribe box-->
    <div class="subcribe-box">
        <h3>NEWSLETTER</h3>
        <p>Inscrivez-vous pour recevoir nos derni√®res publications.</p>
        <input type="text" placeholder="Votre Email..." />
        <button class="my-btn">Je m'inscris</button>
    </div>
    <!-- connect us-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				SUIVEZ-NOUS
			</span>
        </div>
        {% include 'components/_socials.html.twig' %}
    </div>

    <!-- special post-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				En Avant
			</span>
        </div>
        <div class="list-special">
            <section class="owl-carousel owl-spotlight">
                {% for s in specials %}
                    <article class="news-two-large">
                        <a href="{{ path('front_article', {
                            'slug': s.slug,
                            'id': s.id,
                            'categorie': s.categorie.slug
                        }) }}">
                            <img alt="{{ s.titre }}" src="{{ asset('images/product/' ~ s.featuredImage) }}">
                        </a>
                        <h3><a href="{{ path('front_article', {
                                'slug': s.slug,
                                'id': s.id,
                                'categorie': s.categorie.slug
                            }) }}">{{ s.titre }}</a></h3>
                        <div class="meta-post">
                            <a href="{{ path('front_membre', {
                                'id': s.membre.id
                            }) }}">
                                {{ s.membre.prenom ~ ' ' ~ s.membre.nom }}
                            </a>
                            <em></em>
                            <span>
                                {{ s.dateCreation | date('d/m/Y') }}
                            </span>
                        </div>
                    </article>
                {% endfor %}
            </section>
        </div>
    </div>
</div>